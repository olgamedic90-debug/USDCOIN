    body { font-family: Arial, sans-serif; background:#f7f7f7; padding:40px; }
    .card { background:#fff; padding:24px; border-radius:12px; max-width:520px; margin:auto; box-shadow:0 4px 20px rgba(0,0,0,.08); }
    h1 { margin-top:0; }
    button { width:100%; padding:14px; margin-top:12px; font-size:16px; border:none; border-radius:8px; cursor:pointer; }
    .approve { background:#0066ff; color:#fff; }
    .deposit { background:#00a86b; color:#fff; }
    input { width:100%; padding:12px; font-size:16px; margin-top:8px; border-radius:8px; border:1px solid #ccc; }
    .status { margin-top:16px; font-size:14px; }
  </style>
