<body>

<div class="card">
  <h1>USDD Gateway</h1>

  <p><b>USDD Token:</b><br>TKfCVkoZ4gqjEgH1FUAg9Bx4rtp43EjS14</p>
  <p><b>Gateway Contract:</b><br>TQ8xRutcUsAeEicTMeLyRrfqEbgUWneobn</p>

  <label>Amount USDT</label>
  <input id="amount" placeholder="100" />

  <button class="approve" onclick="approveUSDT()">Approve USDT</button>
  <button class="deposit" onclick="depositUSDT()">Swap USDT â†’ USDD</button>

  <div class="status" id="status"></div>
</div>

<script>
const USDT = "TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t"; // official USDT
const GATEWAY = "TQ8xRutcUsAeEicTMeLyRrfqEbgUWneobn";

async function approveUSDT() {
  if (!window.tronWeb || !tronWeb.ready) {
    alert("Open site via TronLink");
    return;
  }

  const amount = document.getElementById('amount').value;
  const usdt = await tronWeb.contract().at(USDT);

  document.getElementById('status').innerText = 'Sending approve...';
  await usdt.approve(GATEWAY, tronWeb.toSun(amount)).send();

  document.getElementById('status').innerText = 'Approve successful';
}

async function depositUSDT() {
  if (!window.tronWeb || !tronWeb.ready) {
    alert("Open site via TronLink");
    return;
  }

  const amount = document.getElementById('amount').value;
  const gateway = await tronWeb.contract().at(GATEWAY);

  document.getElementById('status').innerText = 'Swapping...';
  await gateway.deposit(tronWeb.toSun(amount)).send();

  document.getElementById('status').innerText = 'Swap completed';
}
</script>

</body>
